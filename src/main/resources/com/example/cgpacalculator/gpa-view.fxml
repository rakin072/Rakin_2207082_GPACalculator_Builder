<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane" styleClass="background-light" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cgpacalculator.CgpaController">

    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <Label fx:id="remainingCreditsLabel" style="-fx-font-size: 16px;" text="Remaining Credits: 15.00" />

            <Button onAction="#onToggleTheme" styleClass="button-toggle-theme" text="Toggle Theme" />
        </HBox>
    </top>

    <left>
        <VBox spacing="10">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>

            <Label text="Course Name:" />
            <TextField fx:id="courseName" />

            <Label text="Course Code:" />
            <TextField fx:id="courseCode" />

            <Label text="Credit:" />
            <TextField fx:id="credit" />

            <Label text="Teacher 1:" />
            <TextField fx:id="teacher1" />

            <Label text="Teacher 2:" />
            <TextField fx:id="teacher2" />

            <Label text="Grade:" />
            <ComboBox fx:id="grade" />

            <HBox spacing="10">
                <Button fx:id="addCourseButton" onAction="#onAddCourse" text="Add Course" />
                <Button onAction="#onRemoveCourse" text="Remove Selected" />
            </HBox>

            <Button fx:id="calculateButton" disable="true" onAction="#onCalculate" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Calculate GPA" />
        </VBox>
    </left>

    <center>
        <VBox>
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <TableView fx:id="table" prefHeight="350">
                <columns>
                    <TableColumn fx:id="colName" prefWidth="150" text="Course Name" />
                    <TableColumn fx:id="colCode" prefWidth="100" text="Code" />
                    <TableColumn fx:id="colCredit" prefWidth="70" text="Credit" />
                    <TableColumn fx:id="colTeacher1" prefWidth="120" text="Teacher 1" />
                    <TableColumn fx:id="colTeacher2" prefWidth="120" text="Teacher 2" />
                    <TableColumn fx:id="colGrade" prefWidth="80" text="Grade" />
                </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>
