<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cgpacalculator.CgpaController">

    <!-- ===== TOP: Remaining Credits ===== -->
    <top>
        <Label fx:id="remainingCreditsLabel"
               text="Remaining Credits: 15.00"
               style="-fx-font-size: 16px; -fx-padding: 10;" />
    </top>

    <!-- ===== LEFT: Form Inputs ===== -->
    <left>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Label text="Course Name:"/>
            <TextField fx:id="courseName"/>

            <Label text="Course Code:"/>
            <TextField fx:id="courseCode"/>

            <Label text="Credit:"/>
            <TextField fx:id="credit"/>

            <Label text="Teacher 1:"/>
            <TextField fx:id="teacher1"/>

            <Label text="Teacher 2:"/>
            <TextField fx:id="teacher2"/>

            <Label text="Grade:"/>
            <ComboBox fx:id="grade"/>

            <HBox spacing="10">
                <Button fx:id="addCourseButton"
                        text="Add Course"
                        onAction="#onAddCourse"/>

                <Button text="Remove Selected"
                        onAction="#onRemoveCourse"/>
            </HBox>

            <Button fx:id="calculateButton"
                    text="Calculate GPA"
                    disable="true"
                    onAction="#onCalculate"
                    style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        </VBox>
    </left>

    <!-- ===== CENTER: TableView ===== -->
    <center>
        <VBox>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <TableView fx:id="table" prefHeight="350">
                <columns>
                    <TableColumn fx:id="colName" text="Course Name" prefWidth="150"/>
                    <TableColumn fx:id="colCode" text="Code" prefWidth="100"/>
                    <TableColumn fx:id="colCredit" text="Credit" prefWidth="70"/>
                    <TableColumn fx:id="colTeacher1" text="Teacher 1" prefWidth="120"/>
                    <TableColumn fx:id="colTeacher2" text="Teacher 2" prefWidth="120"/>
                    <TableColumn fx:id="colGrade" text="Grade" prefWidth="80"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
