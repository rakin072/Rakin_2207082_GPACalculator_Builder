<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="rootPane" alignment="TOP_CENTER" prefHeight="600" prefWidth="800" spacing="20"
      styleClass="background-light" stylesheets="@style.css"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12"
      fx:controller="com.example.cgpacalculator.ResultController">

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10"/>
        </padding>

        <Label fx:id="resultLabel" styleClass="title" text="Results will appear here" HBox.hgrow="ALWAYS"/>

        <TextField fx:id="rollInput" promptText="Enter Roll" prefWidth="120"/>
        <Button onAction="#saveResult" styleClass="button-primary" text="Save Result"/>
        <Button onAction="#onToggleTheme" styleClass="button-toggle-theme" text="Toggle Theme"/>
        <Button onAction="#openHistoryPage" styleClass="button-secondary" text="View History"/>
    </HBox>

    <TableView fx:id="resultTable" prefHeight="400" prefWidth="750">
        <columns>
            <TableColumn fx:id="colName" prefWidth="150" text="Course Name"/>
            <TableColumn fx:id="colCode" prefWidth="100" text="Code"/>
            <TableColumn fx:id="colCredit" prefWidth="70" text="Credit"/>
            <TableColumn fx:id="colTeacher1" prefWidth="120" text="Teacher 1"/>
            <TableColumn fx:id="colTeacher2" prefWidth="120" text="Teacher 2"/>
            <TableColumn fx:id="colGrade" prefWidth="80" text="Grade"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

</VBox>
